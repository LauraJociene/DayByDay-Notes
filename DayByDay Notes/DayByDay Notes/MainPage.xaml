<Page
    x:Class="DayByDay_Notes.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:DayByDay_Notes"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <!--test-->
    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="90*" />
            <RowDefinition Height="90*"/>
            <RowDefinition Height="90*"/>
            <RowDefinition Height="90*"/>
            <RowDefinition Height="270*"/>
            <RowDefinition Height="442*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>

            <ColumnDefinition Width="110*"/>
            <ColumnDefinition Width="200*"/>
            <ColumnDefinition Width="200*"/>
            <ColumnDefinition Width="200*"/>
            <ColumnDefinition Width="600*"/>
            <ColumnDefinition Width="287*"/>
            <ColumnDefinition Width="426*"/>
        </Grid.ColumnDefinitions>
        <CalendarView x:Name="CalendarView" HorizontalAlignment="Stretch"
                      VerticalAlignment="Stretch" Grid.Row="1"                       
                      Margin="10" 
                      Grid.RowSpan="4" Grid.Column="4"/>
        <Popup Grid.ColumnSpan="6"/>
        <Button x:Name="NotesButton" Content="Notes"
                Grid.Column="1"
                Grid.Row ="0"
                HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                  Margin="10"
                Background="Black"
                Foreground="White"
              
                
                  Click="NotesButton_Click"/>
        <Button x:Name="ListsButton" Content="Lists" 
                  Grid.Column="2" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                  Margin="10"
                  Background="Black"
                  Foreground="White"
                  Click="ListsButton_Click"/>
        
        <Button x:Name="EventsButton" Content="Events"
                  Grid.Column="3" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                  Margin="10"
                Background="Black"
                Foreground="White"
           

                  Click="EventsButton_Click"/>
        <Button x:Name="AddButton" Content=""
                  HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                  Grid.Row="1" Grid.Column="0"
                  Margin="10"
                  Click="AddButton_Click">
            <Button.Background>
                <ImageBrush Stretch="UniformToFill" ImageSource="Assets/Circle Add -01.png"/>
            </Button.Background>
        </Button>
        <Button x:Name="SettingsButton" Content=""
                  HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                  Margin="10"
                  Grid.Row="2" Grid.Column="0"
                  Click="SettingsButton_Click">
            <Button.Background>
                <ImageBrush Stretch="UniformToFill" ImageSource="Assets/Setting_2-WF.png"/>
            </Button.Background>
        </Button>
        <Button x:Name="SearchButton" Content=""
                  HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                  Margin="10"
                  Grid.Row="3" Grid.Column="0"
                  Click="SearchButton_Click">
            <Button.Background>
                <ImageBrush Stretch="UniformToFill" ImageSource="Assets/Search-WF.png"/>
            </Button.Background>
        </Button>
        <Button x:Name="BackButton" Content=""
                  HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                  Grid.Column="0"
                  Grid.Row="0"
                  Margin="10"
                  Click="BackButton_Click">
            <Button.Background>
                <ImageBrush Stretch="UniformToFill" ImageSource="Assets/Circled Left 01-WF.png"/>
            </Button.Background>
        </Button>
        <TextBox x:Name="textBox" 
                 Grid.Column="1" Grid.Row="1"
                 Grid.RowSpan="4" Grid.ColumnSpan="3"
                 HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="10"  
                 TextWrapping="Wrap" Text="TextBox"/>


    </Grid>

</Page>
