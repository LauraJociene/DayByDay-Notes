<Page
    x:Class="DayByDay_Notes.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:DayByDay_Notes"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="31*"/>
            <RowDefinition Height="40*"/>
            <RowDefinition Height="289*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>

            <ColumnDefinition Width="42"/>
            <ColumnDefinition Width="58"/>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="10*"/>
            <ColumnDefinition Width="29*"/>
        </Grid.ColumnDefinitions>
        <CalendarView Grid.Column="5" HorizontalAlignment="Left" Grid.Row="1" VerticalAlignment="Top" Height="510" Width="508" Margin="0,27,0,0" Grid.RowSpan="2"/>
        <Popup Grid.ColumnSpan="2"/>
        <Button x:Name="NotesButton" Content="Notes"
                  Grid.Column="2" HorizontalAlignment="Left" VerticalAlignment="Top"
                  Margin="39,10,0,0"
                  Height="70" Width="180" FontSize="36"
                  Click="NotesButton_Click" Grid.ColumnSpan="2"/>
        <Button x:Name="ListsButton" Content="Lists" 
                  Grid.Column="3" HorizontalAlignment="Left" VerticalAlignment="Top"
                  Margin="39,10,0,0"
                  Height="70" Width="180" FontSize="36"
                  Click="ListsButton_Click" Grid.ColumnSpan="2"/>
        <Button x:Name="EventsButton" Content="Events"
                  Grid.Column="4" HorizontalAlignment="Left" VerticalAlignment="Top"
                  Margin="39,10,0,0"
                  Height="70" Width="180" FontSize="36"
                  Click="EventsButton_Click"/>
        <Button x:Name="AddButton" Content="+"
                  HorizontalAlignment="Left"
                  Grid.Row="1" VerticalAlignment="Top" Height="70" Width="90" FontSize="45"
                  Margin="10,27,0,0"
                  Click="AddButton_Click" Grid.ColumnSpan="2"/>
        <Button x:Name="SettingsButton" Content="Settings"
                  HorizontalAlignment="Left"
                  Margin="10,57,0,0"
                  Grid.Row="2" VerticalAlignment="Top" Height="70" Width="90"
                  Click="SettingsButton_Click" Grid.ColumnSpan="2"/>
        <Button x:Name="SearchButton" Content="Search"
                  HorizontalAlignment="Left"
                  Margin="10,102,0,0"
                  Grid.Row="1" VerticalAlignment="Top" Height="70" Width="90"
                  Click="SearchButton_Click" Grid.RowSpan="2" Grid.ColumnSpan="2"/>
        <Button x:Name="BackButton" Content="Back"
                  HorizontalAlignment="Left" VerticalAlignment="Top" Height="70" Width="90" FontSize="15"
                  Margin="10,10,0,0"
                  Click="BackButton_Click" Grid.ColumnSpan="2"/>
        <TextBox x:Name="textBox" Grid.Column="2" HorizontalAlignment="Left" Margin="38,27,0,0" Grid.Row="1" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Grid.ColumnSpan="3" Height="510" Width="666" Grid.RowSpan="2"/>


    </Grid>

</Page>
